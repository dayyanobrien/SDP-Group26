	GridLayout:
		size: root.width, root.height
		cols: 2
        rows: 1
		Image:
			source: 'moving.png'		
		Button:
			text: "Delivering order to table."
			font_size: 30
			on_release:
			    root.openDoor(self)
				app.root.current = "table"
				
			
