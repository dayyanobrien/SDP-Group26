<Table>:
	name: "table"

	GridLayout:
		size: root.width, root.height
		cols: 2
        rows: 1
		Image:
			source: 'table.png'		
		Button:
		    font_size: 30
			text: "Received Order"
			on_release:
			    root.returnHome(self)
							
<Delivering>:
