#:import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    transition: NoTransition()
	Kitchen:
	Kitchen2:
	Table:
	Delivering:
	Returning:
	Warn:


<Kitchen>:
	name: "kitchen"

	GridLayout:
	    size: root.width, root.height
		cols: 5
        rows: 2
		Image:
			source: 'logo.png'		
		ToggleButton:
			text: "Table 1"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		ToggleButton:
			text: "Table 2"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		ToggleButton:
			text: "Table 3"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		ToggleButton:
			text: "Table 4"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		ToggleButton:
			text: "Table 5"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		ToggleButton:
			text: "Table 6"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		ToggleButton:
			text: "Table 7"
			font_size: 20
			on_press:
			    root.table_pressed(self)
		Button:
			text: "Confirm"
			font_size: 20
			on_release: 
		        root.confirm(self)
		Button:
			text: "Next page"
			font_size: 20
			on_release:
				app.root.current = "kitchen2"
				
